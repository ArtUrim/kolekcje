{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title"],
  "properties": {
    "isbn": {
      "type": "integer",
      "minimum": 0,
      "pattern": "^\\d{10}$|^\\d{13}$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string"
    },
    "publishYear": {
      "type": "integer",
      "minimum": 0,
      "pattern": "^\\d{4}$"
    },
    "firstPublishYear": {
      "type": "integer",
      "minimum": 0,
      "pattern": "^\\d{4}$"
    },
    "format": {
      "type": "string",
      "enum": ["unknown", "paperback", "hardback", "ebook"]
    },
    "pages": {
      "type": "integer",
      "minimum": 0
    },
    "description": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "series": {
      "type": "string"
    },
    "originalTitle": {
      "type": "string"
    },
    "translator": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-zA-Z]{2}[a-z_]$"
    }
  }
}
